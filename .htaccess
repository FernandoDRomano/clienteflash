# Negar acceso a archivos que empiezan por punto y a /.git
<FilesMatch "^\.">
  Require all denied
</FilesMatch>

# Evitar listado de directorios
Options -Indexes

# Asegurar /(.git) 
RedirectMatch 404 /\.git(/|$)

